<%= form_with(model: todo_list, local: true) do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% todo_list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <h1>Tasks</h1>

  <%= form.fields_for :tasks do |f| %>
      <%= f.label :description %>
      <%= text_field_tag 'description', '', class: 'task-description' %>
    <div class="tasks-container">
    </div>
  <% end %>

  <%= link_to "Add task", "#", class: "add-task"  %>
  <%= hidden_field_tag('task_index', '0') %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= javascript_pack_tag 'tasks' %>