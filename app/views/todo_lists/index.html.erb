<p id="notice"><%= notice %></p>

<h1 class="p-3 mb-2 bg-info text-white text-center">TodoList</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.name %></td>
        <td><%= link_to 'Show', todo_list, class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New TodoList', new_todo_list_path, class: "btn btn-outline-dark new-list-button"%>